{
    "name": "sensirion-flow-meter",
    "version": "1.0.0",
    "license": "UNLICENSED",
    "author": "Cytera",
    "main": "dist/index.js",
    "source": "src/index.ts",
    "types": "dist/index.d.js",
    "scripts": {
        "build": "tsc --declaration --declarationMap",
        "changelog": "conventional-changelog -p eslint",
        "commit-hook": "npm-run-all lint:typescript lint-staged",
        "dev": "ts-node-dev src/index.ts",
        "doctoc": "doctoc README.md",
        "lint": "npm-run-all lint:*",
        "lint-staged": "lint-staged",
        "lint:eslint": "eslint '*.js' 'src/**/*.{js,ts}' 'tests/**/*.{js,ts}' --quiet --fix",
        "lint:typescript": "tsc --noEmit --allowJs",
        "prepublishOnly": "npm-run-all lint test build",
        "prettier": "prettier --prose-wrap always --write README.md",
        "sort-package-json": "sort-package-json",
        "test": "jest",
        "typedoc": "typedoc --out docs src"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn commit-hook"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint --fix",
            "jest --onlyChanged"
        ],
        "*.{json,md}": [
            "prettier --prose-wrap always --write"
        ],
        "README.md": [
            "doctoc"
        ],
        "package.json": [
            "sort-package-json"
        ]
    },
    "prettier": "@hackscience/prettier-config",
    "dependencies": {
        "@types/pino": "^6.0.1",
        "@types/serialport": "^8.0.1",
        "pino": "^6.2.1",
        "rxjs": "^6.6.3",
        "serialport": "^9.0.1"
    },
    "devDependencies": {
        "@hackscience/prettier-config": "^1.0.1",
        "@types/jest": "^25.2.1",
        "@types/node": "^13.11.1",
        "@typescript-eslint/eslint-plugin": "^2.28.0",
        "@typescript-eslint/parser": "^2.28.0",
        "conventional-changelog-cli": "^2.0.31",
        "doctoc": "^1.4.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-tsdoc": "^0.2.4",
        "husky": "^4.2.5",
        "jest": "^25.3.0",
        "jest-config": "^25.3.0",
        "lint-staged": "^10.1.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.4",
        "sort-package-json": "^1.42.2",
        "ts-jest": "^25.3.1",
        "ts-node-dev": "^1.0.0-pre.44",
        "typedoc": "^0.17.6",
        "typescript": "^3.8.3"
    }
}
